{
  "apps": [
    {
      "name": "apartment-info-app-backend",
      "script": "ts-node",
      "args": "-r tsconfig-paths/register -p src/main.ts",
      "watch": true,
      "ignore_watch": ["public", "./public/", "logs", "./logs/", ".idea"],
      "env_production": {
        "NODE_ENV": "production"
      },
      "watch_options": {
        "usePolling": true
      },
      "env_development": {
        "NODE_ENV": "development"
      }
    }
  ]
}
